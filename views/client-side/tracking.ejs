<body class="body-gray-bg">

    <!-- preloader -->
    <div id="preloader">
        <div id="loading-center">
            <div class="loader">
                <div class="loader-outter"></div>
                <div class="loader-inner"></div>
            </div>
        </div>
    </div>
    <!-- preloader-end -->

        <%- include('../layout/client_header.ejs') %>

        <!--Start Page Header-->
        <section class="page-header">
            <div class="page-header__img float-bob-y"><img src="assets/img/resource/page-header-img.png" alt=""></div>
            <div class="container">
                <div class="page-header__inner">
                    <h2>Tracking Page</h2>
                    <ul class="thm-breadcrumb">
                        <li><a href="/">Home</a></li>
                        <li><span class="icon-left"></span></li>
                        <li>Tracking Page</li>
                    </ul>
                </div>
            </div>
        </section>
        <!--End Page Header-->

        <!-- alert -->
          <% if(error_msg && error_msg.length > 0){ %>
            <div class="alert alert-danger alert-dismissible show" role="alert">
              <strong>Error!</strong>  <%= error_msg[0] %>              
          </div>
          <% } %>
    
        <!-- end alert -->

        <div class="container my-3">
            <form action="/tracking" method="get">
                <input type="text" class="form-control my-2" name="track_id" placeholder="Enter Tracking Number " required>
                <button class="sub" type="submit">
                    track
                </button>
            </form>
        </div>


        <!-- New code -->
        <% if(reports.length > 0) { %>
        <div class="container my-3 p-3 rounded" style="background-color: white;  box-shadow: 2px 2px 10px rgb(196, 192, 192);">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Electronic Package</h2>
                    <div><small>Tracking ID: <b><%= parcel.tracking_id || TRK00000000000 %></b> </small></div>
                </div>
                <div class="col-sm-6">
                    <div><i class="bi bi-geo-alt-fill mx-2 fw-bold">From:</i> <%= parcel.pickup_location %> </div>
                    <div><i class="bi bi-geo-alt mx-2 fw-bold">To:</i> <%= parcel.delivery_location %></div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-6">
                    <span class="bi bi-calendar3 mx-2 fw-bold">created:</span> <%= parcel.created_at %>
                </div>
                <div class="col-sm-6">
                    <span class="bi bi-amd mx-2 fw-bold">Delivery:</span><%= parcel.delivery_location %>
                </div>
            </div>
        </div>

        <div class="container rounded p-5 my-3 bg-dark " style="position: relative;" >
            <div style="margin-left: 10%;" class=" text-light">
                 <%
                    reports.forEach( parcel => { 
                    if(reports.indexOf(parcel) === reports.length - 1){ %>
                        <h4  >
                            <p class="text-light h4 text-capitalize" ><%= parcel.description %> </p>
                            <p class="text-light h4 text-capitalize" ><%= parcel.issue_type %> </p>
                            <p class="text-light h4 text-capitalize" ><%= parcel.resolution %> </p>  
                        </h4>
                        <p class="text-warning">
                            Executed Time: <%= parcel.created_at %> <br>
                            Expected Arrival: <%= parcel.expected_arrival_time %>
                        </p>

                        

                    <% 
                            return;
                        } });
                    %>
                    
            </div>
            <span class="bi bi-truck text-light"  style="position: absolute; right: 20px; font-size: 40px;"></span>
            <span class="bi bi-airplane text-light scroll-top scroll-to-target" style="position: absolute; left: 20px; top:20px; font-size: 40px;"></span>
        </div>


        <!-- parcel route box -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 text-capitalize">
                    <%
                    let x = 0
                        reports.forEach( parcel => { 
                            x= x + 1;
                        if(reports.indexOf(parcel) === reports.length - 1){ %>
                            <div class="bg-light p-3" style="position: relative; border:1px double rgb(203, 233, 203)" >
                                <div class="bg-success p-3" style="width: 50px; border-radius: 50%; height:50px; position: absolute; top:45%; display: flex; justify-content: center; align-items: center;">
                                    <span class="bi bi-arrow-right h5 text-light">  </span>
                                </div>
                                <div style="margin:50px; " >
                                        
                                    <div class="card-body">
                                        <span class="text-capitalize my-3 "><%= parcel.current_location %>:  <span class="fw-bold "><%= parcel.status %> </span> </span>
                                        <p> <i><%= parcel.description %></i> </p>
                                        <p><%= parcel.issue_type %> </p>
                                        <p><%= parcel.resolution %> </p>  
                                        <p>
                                           <b>Executed Time: </b> <%= parcel.created_at %> <br>
                                            <b>Expected Arrival:</b> <%= parcel.expected_arrival_time %>
                                        </p>                                  
                                    </div>
                                </div>
                            </div>
                    
                    <% 
                            return;
                        } 
                    %>

                    <div class="" style="border-left: 10px solid green; position: relative;">
                       <div class="bg-success p-3" style="width: 50px; border-radius: 50%; height:50px; position: absolute; top:45%; display: flex; justify-content: center; align-items: center;">
                            <span class=" h5 text-light"> <%= x %>  </span>
                        </div>
                       
                        <div style="margin:50px;">
                                
                            <div class="card-body">
                                <span class="text-capitalize"><%= parcel.current_location %>:  <span class="fw-bold"><%= parcel.status %> </span> </span>
                                <p><%= parcel.description %> </p>
                                <p><%= parcel.issue_type %> </p>
                                <p><%= parcel.resolution %> </p>  
                                <p>
                                    Executed Time: <%= parcel.created_at %> <br>
                                    Expected Arrival: <%= parcel.expected_arrival_time %>
                                </p>                                  
                            </div>
                        </div>
                    </div>
                    <!-- targeting the last item -->
                   <%}); %>
                    
                    

                    
                </div>

                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header">
                            <b>Cusomer Care Support</b>
                        </div>
                        
                        <div class="card-footer">
                            <!-- contact social media handle -->
                            <p>Contact us on our social media handles</p>
                            <div style="display: flex; align-items: center; justify-content: space-around;">
                                <a href="https://wa.link/1svtfa">
                                    <i class="bi bi-whatsapp"></i>
                                </a>
                                <a href="t.me/FireFireFoxExprex">
                                    <i class="bi bi-telegram"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <hr>
        <hr>

        <!-- parcel details dropdown -->
        <div class="container my-3">
            <div class="row">
                <div class="col-sm-12">
                    <div class="accordion-box-one">
                        <!--Start single accordion box-->
                        <div class="accordion accordion-block">
                            <div class="accord-btn ">
                                <h4>
                                    Parcel Details
                                </h4>
                            </div>
                            <div class="accord-content collapsed">
                                <% if(parcel){ %>
                                    <table class="table">
                                        <tr>
                                            <td>Weight: </td>
                                            <td><%= parcel.weight %></td>
                                        </tr>
                                        <tr>
                                            <td>Note:</td>
                                            <td><%= parcel.note %></td>
                                        </tr>
                                        <tr>
                                            <td>status:</td>
                                            <td><%= parcel.status %></td>
                                        </tr>
                                    </table> 
                                <% }else{ %>
                                    <p>No parcel details found</p>
                                <% } %>                           
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
            
        </div>
         <% }else{ %>
            <div class="container my-3 p-3 rounded" style="background-color: white;  box-shadow: 2px 2px 10px rgb(196, 192, 192);">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <h3>Details shows when you search for your parcel</h3>
                    </div>
                </div>
            </div>
         <% } %>








        <%- include('../layout/client_footer.ejs') %>

</body>



</html>