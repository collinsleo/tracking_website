    <style>
        .int{
            padding-top: 60px;
            padding-bottom: 190px;
            border: none;
        }

        .int input{
            border: none;
           
            justify-content: center;
            align-items: center;
        }
        div.int{
            background-color: white;
            width:15px auto;
            padding-left:30px ;
            padding-right: 30px;
        }
        .line{
            margin-top: 0;
        }
        .sub{
            background-color: orange;
            text-transform: uppercase;
            color:white;
            padding: 15px;
            border-radius: 7px;
        }
        .tableContainer{
            overflow: scroll;

        }


